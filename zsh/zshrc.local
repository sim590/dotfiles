
bindkey -v "^X^E" edit-command-line
export KEYTIMEOUT=1

source ~/.zplug/init.zsh

# First loading my environment variables.
source ~/.zshrc.env

source ~/.zshrc.alias
source ~/.zshrc.debian
source ~/.zshrc.fzf
source ~/.zshrc.wine

# disable c-s stop signal key binding to let readline use forward-history-search
# stty stop ""
stty -ixon <$TTY >$TTY

sudo mount -a

if [[ "$(umask)" = "0000" ]]; then 
  umask 0022
fi

sudo mount -a

