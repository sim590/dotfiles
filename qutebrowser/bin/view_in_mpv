#!/usr/bin/env bash

PATH_TO_QUTEB_MPV_SCRIPT=$HOME/prog/qutebrowser/misc/userscripts/view_in_mpv

scriptdir=$(dirname $(readlink -f $0))

source $scriptdir/get_ytdlp_mpv_vars "$QUTE_URL"

init_ytdlp_mpv

(cd $tmpdir && $PATH_TO_QUTEB_MPV_SCRIPT)

close_ytdlp_mpv

# vim: set sts=2 ts=2 sw=2 tw=120 et :

