# GÉNÉRAL ====================================
set editor = "vim"
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates
set move = no
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
set wait_key = no
# FIXME: Ne marche pas vraiment. Trouver l'option pour arriver au but décrit ci-après.
set beep_new = no # pour éviter les fausses notifications en continue (chaque
                  # mise à jour de notmuch) ... :(

# imap behavior
set mail_check = 120
set timeout = 300
set imap_keepalive = 300

ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
alternative_order text/calendar text/plain text/html *
auto_view text/html
auto_view text/calendar
set mailcap_path = ~/.mutt/mailcap
# ============================================

# load aliases
set alias_file = ~/.mutt/aliases
set sort_alias= alias
set reverse_alias=yes
source $alias_file

